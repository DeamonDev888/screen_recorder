{
  "name": "pro-screen-recorder",
  "version": "1.0.0",
  "description": "Professional Screen Recorder Application",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && electron .",
    "package": "npm run build && electron-builder build --win --publish never"
  },
  "build": {
    "appId": "com.screenflow.pro",
    "productName": "ScreenflowPro",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/hero_design.png"
    }
  },
  "author": "Antigravity",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^25.0.6",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
